FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    python3-dev \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Create xone config directory
RUN mkdir -p /root/.xone

# Copy xoneaiagents source
COPY src/xoneai-agents/ /app/xoneaiagents/
WORKDIR /app/xoneaiagents

# Install xoneaiagents with all features (non-editable for production)
RUN pip install --no-cache-dir ".[all]"

# Set environment variables for directory management
ENV XONE_CONFIG_DIR=/root/.xone
ENV CHAINLIT_CONFIG_DIR=/root/.xone
ENV CHAINLIT_DB_DIR=/root/.xone
ENV DOCKER_CONTAINER=true

WORKDIR /app

# Default command
CMD ["python", "-c", "import xoneaiagents; print('XoneAI Agents installed successfully')"]